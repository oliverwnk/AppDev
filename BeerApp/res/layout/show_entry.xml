<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar" />
    
    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
    
    <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_dateEntryFrom"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Labl_Begin"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/txt_timeBegin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Labl_End"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txt_timeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Labl_Kategorie"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_PrdctName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Labl_PrdctName"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    
    <TextView
        android:id="@+id/txt_otherEntriesFromUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Andere Artikel des Benutzers"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:layout_marginTop="10dp"
        android:visibility="gone"/>
    
    <ListView
        android:id="@+id/listview_showEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >
    </ListView>

    
    
     <Button
        android:id="@+id/Btn_OpenMap"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/CustomStyleButton"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:text="@string/Btn_OpenMap"/>
     
     <Button
        android:id="@+id/Btn_deleteFromFavorites"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/CustomStyleButton"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="Delete from my favorites"
        android:visibility="gone"/>
     
      <Button
        android:id="@+id/Btn_addToFavorites"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/CustomStyleButton"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="Add to my favorites"
        android:visibility="gone"/>

</LinearLayout>