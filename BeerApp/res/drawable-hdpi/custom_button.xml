<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 <item android:state_pressed="true" >
  <shape>
  <solid
   android:color="#ef4444" />
  <stroke
   android:width="0dp"
   android:color="#FFFFFF" />
  <corners
   android:radius="0dp" />
  <padding
   android:left="10dp"
   android:top="10dp"
   android:right="10dp"
   android:bottom="10dp" />
  </shape>
 </item>
  <item>
  <shape>
  <gradient
   android:startColor="#F06C0C"
   android:endColor="#F06C0C"
   android:angle="270" />
  <stroke
   android:width="0dp"
   android:color="#FFFFFF" />
  <corners
   android:radius="0dp" />
  <padding
   android:left="0dp"
   android:top="0dp"
   android:right="0dp"
   android:bottom="0dp" />
 </shape>
 </item>
</selector>